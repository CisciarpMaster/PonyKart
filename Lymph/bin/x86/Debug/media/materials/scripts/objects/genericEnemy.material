// ====================================================
// the glow overlay
material GE_InnerGlow {
	technique {
		pass {
			scene_blend alpha_blend
			depth_check off
			lighting off
		}
	}
}

material GE_InnerGlow_red : GE_InnerGlow {
	technique {
		pass {
			vertex_program_ref glow_vs_cg {
				param_named size_add_value float -1
				param_named size_mult_value float 1
			}
			fragment_program_ref glow_ps_cg {
				param_named colours float4 1.0 0.0 0.0 0.4
			}
		}
	}
}
