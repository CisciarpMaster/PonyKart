material GE_BalloonGlow {
	technique {
		pass {
			ambient 1.0 1.0 1.0
			diffuse 1.0 1.0 1.0

			texture_unit {
				texture grey.png
				filtering linear linear linear
			}
		}
		pass {
			scene_blend add
			depth_check on
			lighting on
			
			vertex_program_ref fresnel_vs {
			}
			fragment_program_ref fresnel_ps {
				param_named GlowColor float3 1 1 1
				param_named GlowExpon float  2.5
				param_named Alpha     float  1
			}
		}
	}
}
material GE_BalloonGlow_red : GE_BalloonGlow {
	technique {
		pass {
			ambient 1 0 0
		}
		pass {
			fragment_program_ref fresnel_ps {
				param_named GlowColor float3 1 0 0
			}
		}
	}
}
